<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
        <meta charset="utf-8">
        <title>PointsMap</title>
        <style>
            html, body {
                height: 100%;
                margin: 0;
                padding: 0;
            }

            #map {
                height: 100%;
            }

            #images {
                position: absolute;
                top: 7px;
                left: 7px;
                width: 470px;
                background: #c4e3f3;
                opacity: 0.9;
                overflow: scroll;
                height: 97%;
            }

            .infowindow img {
                max-height: 150px;
            }

            ul.slider {
                width: 200px;
            }

            header {
                position : absolute;
                width    : auto;
                right    : 25px;
                top      : 25px;
                z-index  : 9;
                text-align: right;
            }

            header > div {
                float  : left;
                margin : 10px;
            }

            .modal {
                z-index: 9;
                background: #f6bc00;
                /*width: 300px;*/
                min-height: 400px;
                margin: 200px;
            }


            .dropdown-menu {
                height: auto;
                max-height: 200px;
                overflow-x: hidden;                
            }

        </style>

        <script src="/js/gmap-style.js"></script>
        <script src="https://maps.googleapis.com/maps/api/js?key={{googleKey}}&amp;language=ru-RU"></script>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet"  crossorigin="anonymous">
        <link href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.5/css/bootstrap-select.min.css" rel="stylesheet"  crossorigin="anonymous">
        
        <script>
            var map;

            var geocoder = new google.maps.Geocoder();
            var points = {{points_json|raw}};
            
            function initialize() {
                map = new google.maps.Map(document.getElementById('map'), {
                    zoom: 12,
                    center: {lat: 59.94, lng: 30.31},
                    disableDefaultUI: true,
                    zoomControl: true,
                    scaleControl: true
                });
                
                changeCity('Москва');

                var usRoadMapType = new google.maps.StyledMapType($gmapStyle);
                map.mapTypes.set('beeline', usRoadMapType);
                map.setMapTypeId('beeline');

                $icon = {
                    path: google.maps.SymbolPath.CIRCLE,
                    scale: 7,
                    fillOpacity: 0.9,
                    strokeOpacity: 0.0,
                    fillColor: '#f6bc00'
                };

                var infowindow = new google.maps.InfoWindow({
                    content: 'content',
                    maxWidth: 200
                });

                $.each(points, function (key, one) {
                    var marker = new google.maps.Marker({
                        position: {lat: one.lat, lng: one.lng},
                        map: map,
                        title: one.name,
                        icon: $.extend({}, $icon, {fillColor: one.color})
                    });

                    google.maps.event.addListener(marker, 'mouseover', function () {
                        marker.setIcon($.extend({}, marker.getIcon(), {scale: 11}));
                    });
                    google.maps.event.addListener(marker, 'mouseout', function () {
                        marker.setIcon($.extend({}, marker.getIcon(), {scale: 8}));
                    });
                    google.maps.event.addListener(marker, 'click', function () {
                        infowindow.close();
                        infowindow.setContent('<h3>' + one.name + '</h3><br />' + one.address);
                        infowindow.open(map, marker);
                    });
                });
            }

            function changeCity(city) {
                geocoder.geocode({'address': city}, function (results, status) {
                    if (status === google.maps.GeocoderStatus.OK) {
                        var resultBounds = new google.maps.LatLngBounds(
                                results[0].geometry.viewport.getSouthWest(),
                                results[0].geometry.viewport.getNorthEast()
                                );
                        // map.fitBounds(resultBounds);                            
                        map.fitBounds(results[0].geometry.viewport);
                        // map.setZoom(13);
                    }
                });
            }

            google.maps.event.addDomListener(window, 'load', initialize);
        </script>
    </head>
    <body>
        <header>
            <div id="districts" class="dropdown">
                <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    Города<span class="caret"></span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    {% for city in cities %}
                        <li>
                            <a href="#" data-city="{{city}}">{{city}}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div>
                <select id="cities" class="selectpicker" title="Выберите город..." data-live-search="true" data-live-search-placeholder="Выберите город...">
                        <option data-hidden="true"></option>
                        <option data-icon="glyphicon-globe">Россия</option>
                        <option data-icon="glyphicon-star">Москва</option>
                        <option data-divider="true"></option>
                        {% for city in cities %}
                            <option data-icon="glyphicon-map-marker">{{city}}</option>
                        {% endfor %}
                </select>                
            </div>
            <div>
                <a class="btn btn-info" href="/data/list.xlsx">
                    Исходник
                </a>
            </div>
        </header>

        <div id="map"></div>

        <div style="display: none;" >
            <div id="infowindow1">
                <div class="infowindow">
                    <ul class="slider">
                    </ul>
                    <h3></h3>
                </div>
            </div>
            <script src="//yandex.st/jquery/2.1.0/jquery.min.js" type="text/javascript"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js" type="text/javascript"></script>
            <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" crossorigin="anonymous"></script>

            <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.5/js/bootstrap-select.min.js" crossorigin="anonymous"></script>
            
            <script  type="text/javascript">
                $('#districts a').click(function (e) {
                    var $d = $(this);
                    changeCity($d.data('city'))
                    map.setZoom(13);
                });

                $('#cities').change(function (e) {
                    changeCity($(this).val());
                });
                
            </script>

        </div>

    </body>
</html>
